<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:clickable="true"
    android:focusable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
<LinearLayout
    android:layout_width="300dp"
    android:layout_height="50dp"/>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:shadowColor="#000000"
                android:shadowRadius="10"
                android:text="Your Profile Summary"
                android:textSize="40sp"
                android:fontFamily="@font/dynalight"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@null"
                android:elevation="10dp"
                android:padding="5dp"
                android:translationZ="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/genderTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:shadowColor="#000000"
                        android:shadowRadius="5"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ageTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:shadowColor="#000000"
                        android:shadowRadius="5"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/weightTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:shadowColor="#FFFFFF"
                        android:shadowRadius="10"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@null"
                android:elevation="10dp"
                android:padding="5dp"
                android:translationZ="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/cambo"
                            android:text="BMI Analysis [kg/m2]:"
                            android:textStyle="bold|italic"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/help1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="bmihelpClk"
                            app:srcCompat="@drawable/ic_baseline_help_24"
                            tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/bmiTV1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:text="BMI"
                        android:fontFamily="@font/cambo"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/bmiTV2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="BMI"
                        android:textAllCaps="true"
                        android:textSize="18sp" />

                    <SeekBar
                        android:id="@+id/seekBar"
                        style="@style/Widget.AppCompat.SeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:max="45"
                        android:min="13"
                        android:background="#FFFFFF"
                        android:progressDrawable="@drawable/custom_progressbar"
                        android:thumb="@drawable/custom_thumb" />
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@null"
                android:elevation="10dp"
                android:padding="5dp"
                android:translationZ="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="BODY WATER analysis:"
                            android:textStyle="bold|italic"
                            android:fontFamily="@font/cambo"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/help2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            app:srcCompat="@drawable/ic_baseline_help_24"
                            tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/waterTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:text="WATER"
                        android:fontFamily="@font/cambo"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold|italic" />


                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@null"
                android:elevation="10dp"
                android:padding="5dp"
                android:translationZ="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:textStyle="bold|italic"
                            android:text="Calories analysis:"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/help3"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:clickable="true"

                            app:srcCompat="@drawable/ic_baseline_help_24"
                            tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/caloriesBtn"
                        android:background="@layout/button_round"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:text="Calculate Calories"
                        android:textStyle="bold|italic" />
                </LinearLayout>

            </FrameLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/okBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Check Again"
                android:textColor="#000000"
                android:background="@layout/button_round"
                android:layout_gravity="center"
                android:textStyle="bold|italic"/>

        </LinearLayout>
    </ScrollView>

</android.widget.RelativeLayout>