<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="300dp"
    android:layout_height="60dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/dynalight"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowRadius="10"
                android:text="@string/physical_activity"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold" />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="10dp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@layout/button_round"
            android:elevation="10dp"
            android:text="Almost No physical Activity"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold|italic"/>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="10dp"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@layout/button_round"
            android:elevation="10dp"
            android:textStyle="bold|italic"
            android:text="frequently walking"
            android:textColor="#000000"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="10dp"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@layout/button_round"
            android:elevation="10dp"
            android:textStyle="bold|italic"
            android:text="Exercise 1-2 days/week"
            android:textColor="#000000"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="10dp"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textStyle="bold|italic"
            android:background="@layout/button_round"
            android:elevation="10dp"
            android:text="Exercise 3-5 days/week"
            android:textColor="#000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="10dp"/>

        <Button
            android:id="@+id/button10"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@layout/button_round"
            android:elevation="10dp"
            android:textStyle="bold|italic"
            android:text=" exercise EveryDay"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>
</android.widget.RelativeLayout>